{
  "name": "@cookielab.io/klovi",
  "version": "0.0.0",
  "description": "A local web app for browsing and presenting Claude Code session history",
  "module": "index.ts",
  "type": "module",
  "license": "MIT",
  "author": "Cookielab s.r.o.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cookielab/klovi.git"
  },
  "homepage": "https://github.com/cookielab/klovi",
  "bugs": {
    "url": "https://github.com/cookielab/klovi/issues"
  },
  "keywords": [
    "claude",
    "claude-code",
    "session-viewer",
    "ai",
    "developer-tools",
    "presentation",
    "bun"
  ],
  "engines": {
    "node": ">=24.0.0",
    "bun": ">=1.3"
  },
  "bin": {
    "klovi": "dist/server.js"
  },
  "files": [
    "dist/",
    "LICENSE.md",
    "README.md"
  ],
  "scripts": {
    "dev": "bun run build:frontend && NODE_ENV=development bun --watch index.ts",
    "start": "node dist/server.js",
    "build": "bun run build:frontend && bun run build:server",
    "build:frontend": "rm -rf dist/public && bun build ./index.html --outdir dist/public",
    "build:server": "bun scripts/build-server.ts",
    "build:compile": "bun scripts/build-compile.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "bunx biome lint .",
    "format": "bunx biome format --write .",
    "check": "bunx biome check .",
    "check:fix": "bunx biome check --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/bun": "^1.3.8",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "happy-dom": "^20.5.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1"
  }
}
