{
  "name": "@cookielab.io/klovi",
  "version": "0.9.4",
  "description": "A local web app for browsing and presenting Claude Code session history",
  "module": "index.ts",
  "type": "module",
  "license": "MIT",
  "author": "Cookielab s.r.o.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cookielab/klovi.git"
  },
  "homepage": "https://github.com/cookielab/klovi",
  "bugs": {
    "url": "https://github.com/cookielab/klovi/issues"
  },
  "keywords": [
    "claude",
    "claude-code",
    "session-viewer",
    "ai",
    "developer-tools",
    "presentation",
    "bun"
  ],
  "engines": {
    "bun": ">=1.2"
  },
  "bin": {
    "klovi": "bin/klovi.cjs"
  },
  "files": [
    "bin/",
    "index.ts",
    "index.html",
    "src/",
    "favicon.svg",
    "favicon.ico",
    "apple-touch-icon.png",
    "LICENSE.md",
    "README.md"
  ],
  "scripts": {
    "dev": "NODE_ENV=development bun --watch index.ts",
    "start": "bun index.ts",
    "build": "bun build ./index.html --outdir dist",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "bunx biome lint .",
    "format": "bunx biome format --write .",
    "check": "bunx biome check .",
    "check:fix": "bunx biome check --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/bun": "latest",
    "happy-dom": "^20.5.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1"
  }
}
