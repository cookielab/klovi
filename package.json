{
  "name": "@cookielab.io/klovi",
  "version": "0.0.0",
  "description": "A native desktop app for browsing and presenting AI coding session history",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "author": "Cookielab s.r.o.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cookielab/klovi.git"
  },
  "homepage": "https://github.com/cookielab/klovi",
  "bugs": {
    "url": "https://github.com/cookielab/klovi/issues"
  },
  "engines": {
    "bun": ">=1.3"
  },
  "scripts": {
    "dev": "electrobun dev",
    "build": "electrobun build",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "storybook": "bun run --filter @cookielab.io/klovi-design-system storybook"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "@testing-library/react": "^16.3.2",
    "@types/bun": "^1.3.8",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "chrome-devtools-mcp": "^0.18.0",
    "happy-dom": "^20.5.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@cookielab.io/klovi-plugin-claude-code": "workspace:*",
    "@cookielab.io/klovi-plugin-codex": "workspace:*",
    "@cookielab.io/klovi-plugin-core": "workspace:*",
    "@cookielab.io/klovi-plugin-opencode": "workspace:*",
    "@cookielab.io/klovi-design-system": "workspace:*",
    "@cookielab.io/klovi-ui": "workspace:*",
    "electrobun": "^1.14.4",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1"
  },
  "patchedDependencies": {
    "electrobun@1.14.4": "patches/electrobun@1.14.4.patch"
  }
}
